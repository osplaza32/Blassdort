
<div class="ibox-content">
  <div class="ibox-content"><div class="col-sm-4 m-b-xs">
    <a onclick="fnClickAddRow();" href="<%= url_for :controller => 'usuario',:action => 'create' %>" class="btn btn-primary ">Agregar Nuevo Usuarios</a></div>

    <div class="col-sm-3">
      <div class="input-group">
        <input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                    </span>
      </div>
    </div>
    <div class="col-sm-4 m-b-xs">
      <div data-toggle="buttons" class="btn-group">
        <label class="btn btn-sm btn-white"> <input type="radio" id="option1" name="options"> CSV </label>
        <label class="btn btn-sm btn-white active"> <input type="radio" id="option2" name="options"> EXCEL </label>
        <label class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> PDF </label>
      </div>
    </div>
  </div>
  <div>
  <table class="table table-striped table-bordered table-hover table-responsive" id="editable">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Cargo</th>
    </tr>
    </thead>
    <tbody>
    <% @datosusuario.each do |item| %>
      <tr data-toggle="modal" data-target="#myModal4<%=item.nombre%>" style="cursor: pointer;">

        <td> <%= item.nombre%>  </td>
        <td><%= item.apellido %></td>
        <td><%= item.email %></td>
        <td><%= item.telefono%></td>
        <td><%= item.cargo %></td>
      </tr>
      <div class="modal inmodal" id="myModal4<%=item.nombre%>" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content animated fadeIn">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h1 class="modal-title"><%=  item.nombre %></h1>
            </div>
            <div class="modal-body">

              <p>
              </p>
              <%=form_for :puertas, url: url_for( :controller => :usuario, :action => :update )  do |f| %>
                <div class="form-group">
                  Nombre:
                  <%=text_field 'Descriptcion', "Nombre" ,:value => "#{item.nombre}",:readonly => true,class: "form-control #{item.created_at.strftime('%H%M%S').to_s}" %>
                  Apellido:
                  <%=text_field 'Descriptcion', "Apellido" ,:value => "#{item.apellido}",:readonly => true ,class: "form-control #{item.created_at.strftime('%H%M%S').to_s}"%>
Cargo:
                  <%= text_field 'Descriptcion', "Cargo" ,:value => "#{item.cargo}",:readonly => true,class: "form-control #{item.created_at.strftime('%H%M%S').to_s}" %>
                  Email:
                  <%= text_field 'Descriptcion', "Email" ,:value => "#{item.email}",:readonly => true,class: "form-control #{item.created_at.strftime('%H%M%S').to_s}"%>
                  Telefono:
                  <%= text_field 'Descriptcion', "Telefono" ,:value => "#{item.telefono}",:readonly => true,class: "form-control #{item.created_at.strftime('%H%M%S').to_s}" %>
                  nª Tarjeta:
                  <%= text_field 'Descriptcion', "Tarjeta" ,:value => "#{item.email}",:readonly => true,class: "form-control #{item.created_at.strftime('%H%M%S').to_s}" %>



                </div>

            </div>
            <div class="modal-footer">
              <button  type="button" id="<%= item.created_at.strftime('%H%M%S').to_s %>" class="btn btn-primary" onClick='editForm(this)' >Editar</button>
              <%end%>

              <button type="button" class="btn btn-primary">Enviar contraseña</button>


              </div>
          </div>
        </div>
      </div>
    <%end%>

    </tbody>

  </table>
  </div>


</div>
</div>
</div>
</div>
</div>


  <script type="text/javascript">
function editForm(e) {
    $('.'+e.id).removeAttr('readonly');
     $(e).replaceWith( "<input type='submit' value='aceptar' class='btn btn-primary'>" );

}




  </script>

